<p id="notice">
<%= flash[:notice] %>
</p>

<html>
  <body>
    <p id="notice"></p>
    <h1>Books</h1>

    <table class="table">
      <thead>
        <tr>
          <div class="star">
            <div class="speed">
              <th>Title</th>
            </div>
          </div>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h1 class= "field">New book</h1>
    <!-- エラー内容を表示する部分 -->
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <!-- form_with部分 -->
    <%= form_with model: @book do |f| %>
    <div class="new">
      <div class= "field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>

      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
    <% end %>
  </body>
</html>

